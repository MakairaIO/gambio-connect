{
  "name": "makaira/gambio-connect",
  "require": {
    "stripe/stripe-php": "^13.9",
    "respect/validation": "2.2.4",
    "makaira/shared-libs": "^2022.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0",
    "phpmd/phpmd": "^2.6"
  },
  "scripts": {
    "phpunit": [
      "phpunit"
    ],
    "phpcs": [
      "php GXModules/Makaira/MakairaConnect/vendor/bin/phpcbf"
    ],
    "phpcbf": [
      "php GXModules/Makaira/MakairaConnect/vendor/bin/phpcbf"
    ],
    "phpmd": [
      "php GXModules/Makaira/MakairaConnect/vendor/bin/phpmd ../../.. text  codesize,design --exclude 'tests/*,vendor/*'"
    ],
    "test": [
      "@phpcs",
      "@phpunit"
    ]
  },
  "config": {
    "platform": {
        "php": "8.0"
    }
  }
}
